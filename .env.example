# Model Configuration
OLLAMA_MODEL=ikhalid/allam:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
LLM_TEMPERATURE=0.7

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=10000000

# Retrieval
TOP_K_RESULTS=4

# Language Settings
DEFAULT_LANGUAGE=en  # 'en' or 'ar'
ENABLE_AUTO_DETECT=true

# OCR Configuration
# Specify the full path to tesseract.exe (Windows) or 'tesseract' (Linux/Mac)
# TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
